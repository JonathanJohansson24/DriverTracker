@model DriverTracker.Models.DrivingEvents

<div class="container">
    <h1 class="mb-4">Event Details</h1>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Driver</dt>
                <dd class="col-sm-9">@Model.Driver.DriverName</dd>

                <dt class="col-sm-3">Car Registration</dt>
                <dd class="col-sm-9">@Model.Driver.CarReg</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.EventDate.ToString("g")</dd>

                <dt class="col-sm-3">Expense Amount</dt>
                <dd class="col-sm-9 text-danger">@(Model.AmountOut > 0 ? Model.AmountOut.ToString("C") : "-")</dd>

                <dt class="col-sm-3">Income Amount</dt>
                <dd class="col-sm-9 text-success">@(Model.AmountIn > 0 ? Model.AmountIn.ToString("C") : "-")</dd>

                @if (User.IsInRole("Admin"))
                {
                    <dt class="col-sm-3">Responsible Employee</dt>
                    <dd class="col-sm-9">@Model.Driver.ResponsibleEmployee.Name</dd>
                }
            </dl>
        </div>
        <div class="card-footer">
            <a asp-action="Edit" asp-route-id="@Model.DriverEventId" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>