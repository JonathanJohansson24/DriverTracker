@model LoginViewModel

<div class="login-container">
    <div class="login-header">
        <h1>Welcome</h1>
        <p>Sign in to continue to DriverTracker</p>
    </div>

    <form asp-action="Login" class="login-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="login-button">Sign In</button>
    </form>

    <div class="text-center">
        <a asp-action="Index" asp-controller="Home" class="back-link">Back to Home</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}